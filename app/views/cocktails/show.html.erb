<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2 text-center">
      <h1><%= @cocktail.name %></h1>
      <%= image_tag @cocktail.picture.url(:medium) %>
    </div>
    <div class="col-xs-12 col-md-8 col-md-offset-2 text-center">
      <%= link_to new_cocktail_dose_path(@cocktail), {class: "btn btn-primary"} do %>
        <h5>Add new dose to improve <%= @cocktail.name %> recipe</h5>
      <% end %>
    </div>
  </div>
    <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2 text-center">
      <% @cocktail.doses.each do |dose|%>
        <p><%= dose.description %> <%= dose.ingredient.name %></p>
        <%= link_to dose_path(dose) do %>
        <p>delete this dose</p>
      <% end %>
      <% end %>
    </div>
  </div>
</div>

</div>
