<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2 text-center">
      <h1>Create a new cocktail</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4 padded">
      <%= simple_form_for @cocktail do |f| %>
      <%= f.error_notification %>

      <%= f.input :name %>

      <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
