<div class="col-xs-12 col-md-4 text-center">
  <div class="card">
    <div class="card-link">
      <%= link_to cocktail_path(cocktail) do %>
      <div class="card-bg" style="background-image:url(<%= cocktail.picture.url(:medium) %>)">
      </div>
        <div class="card-text">
          <h5><%= cocktail.name%></h5>
        </div>
      <% end %>
    </div>
  </div>
</div>
